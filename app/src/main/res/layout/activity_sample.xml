<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/activity_sample"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.yeray697.imagezoomsample.Sample_Activity">
    <ImageView
        android:layout_margin="30dp"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:id="@+id/ivSample"
        android:src="@mipmap/ic_launcher"/>
    <ImageView
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:id="@+id/ivSample2"
        android:layout_alignParentBottom="true"
        android:src="@mipmap/ic_launcher"/>
    <ImageView
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:id="@+id/ivSample3"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:src="@mipmap/ic_launcher"/>
    <com.yeray697.imagezoomview.ImageZoomView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/ivZoom"/>
</RelativeLayout>
